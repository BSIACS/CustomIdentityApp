@model IEnumerable<CustomIdentityApp.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}

<a asp-controller="Users" asp-action="Create">Добавить пользователя</a>

<table class="table">
    <tr><th>Email</th><th>Год</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Year</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>

                <form class="d-inline" asp-controller="Roles" asp-action="Edit" asp-route-id="@user.Id" method="get">
                    <button type="submit" class="btn btn-sm btn-info">
                        Права доступа
                    </button>
                </form>

                <form class="d-inline" asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>                
            </td>
        </tr>
    }
</table>
